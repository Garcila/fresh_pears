<%= form_for @movie do |f| %>
	<% if @movie.errors.any? %>
		<div>
			<%= pluralize(@movie.errors.count, "error") %> prefented this movie from being added:
			<ul>
				<% @movie.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div>
		<%= f.label :title %><br>
		<%= f.text_field :title, placeholder: "Movie tile" %>
	</div>
	<div>
		<%= f.label :director %><br>
		<%= f.text_field :director, placeholder: "Director" %>
	</div>
	<div>
		<%= f.label :runtime_in_minutes %><br>
		<%= f.number_field :runtime_in_minutes, placeholder: "Minutes" %>
	</div>
	<div>
		<%= f.label :release_date %><br>
		<%= f.date_field :release_date, placeholder: "Released" %>
	</div>
	<div>
		<%= f.label :poster_image_url %><br>
		<%= f.text_field :poster_image_url, placeholder: "URL" %>
	</div>
	<div>
		<%= f.label :description %><br>
		<%= f.text_area :description, placeholder: "Brief movie description" %>
	</div>
	<div>
		<%= f.submit "Submit" %>
	</div>
<% end %>